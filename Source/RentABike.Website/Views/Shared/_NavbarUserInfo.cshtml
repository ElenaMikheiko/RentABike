@using Microsoft.AspNet.Identity
@model RentABike.ViewModels.UserInfoViewModel

@Styles.Render("~/Content/font-awesome.css")

<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
    <i class="fa fa-user"></i> @User.Identity.Name
    <span class="caret"></span>
    @{
        var userAvatar = Model.ImageData != null ? "data : image / jpeg; base64,@(Convert.ToBase64String(Model.Image))" : "/Content/Images/no_avatar.png";
    }
</a>
<ul class="dropdown-menu" style="min-width: 250px; text-align: center; padding-bottom: 10px">
    <li>
        <img src="@userAvatar" width="100" style="padding-top: 5px" />
    </li>
    <li>
        <h4>@Html.ActionLink(@Model.UserFullName, "PersonalAccount", "Account") </h4>
    </li>
    <li role="separator" class="divider" style="margin-top: 20px"></li>
    <li>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
        <i class="fa fa-sign-out">
            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </i>
        }
    </li>
</ul>