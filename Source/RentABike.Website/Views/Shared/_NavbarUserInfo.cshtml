@using Microsoft.AspNet.Identity
@model RentABike.ViewModels.UserInfoViewModel

@Styles.Render("~/Content/font-awesome.css")

<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
    <i class="fa fa-user"></i> @User.Identity.Name
    <span class="caret"></span>
    @*@{
        var userAvatar = Model.FileName != null ? "/Content/Images/" + Model.FileName : "/Content/Images/Indefinite.jpg";
    }*@
</a>
<ul class="dropdown-menu" style="min-width: 250px; text-align: center; padding-bottom: 10px">
    <li>
        <img src="~/Content/Images/no_avatar.png" width="100" style="padding-top: 5px" />
        <span class="label label-info user_custom_label">@*@Model.UserRole.ToString()*@</span>
    </li>
    <li>
        <h4>@Html.ActionLink(@Model.UserFullName, "PersonalAccount", "Account", new {userId = User.Identity.GetUserId()}, null) </h4>
    </li>
    <li class="user_info__item">
        <i class="fa fa-envelope-o" aria-hidden="true"></i> <a href="mailto:"> @Model.UserEmail</a>
    </li>
        <li class="user_info__item">
            <i class="fa fa-phone" aria-hidden="true"></i> @Model.UserPhone
        </li>
    <li role="separator" class="divider" style="margin-top: 20px"></li>
    <li>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
        <i class="fa fa-sign-out">
            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </i>
        }
    </li>
</ul>