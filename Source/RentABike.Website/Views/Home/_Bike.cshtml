@using Roles = RentABike.Models.Constants.Roles
@model RentABike.Models.Bike


<li class="product-wrapper" id="row_@Model.Id">
    <a href="#" class="product">
        <div class="product-main">
            <div class="product-photo">
                @Html.HiddenFor(m => m.Id)
                @if (Model.Image == null)
                {
                    <img src="~/Content/Images/image.png" alt="">
                }
                else
                {
                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))">
                }
                @if (User.IsInRole(Roles.Admin))
                {
                    <div style="text-align: right; vertical-align: top">
                        <span class="glyphicon glyphicon-remove" style="color: red" onclick="ConfirmDeleteBike()" ></span>
                    </div>
                }

                <div class="product-preview">
                    <span class="button" onclick='window.location = "@Url.Action("Details", "Bike", new {id = Model.Id})";'>More details</span>
                    <br />
                    @if (User.Identity.IsAuthenticated && User.IsInRole(Roles.Admin))
                    {
                        <span class="button btn-warning" style="margin-top: 3px" onclick='window.location = "@Url.Action("Edit", "Bike", new {id = Model.Id})";'>Edit bike</span>
                    }
                </div>
            </div>
            <div class="product-text">
                <h2>@Model.Model</h2>
                <h5>@Html.DisplayTextFor(m => m.BikeType.Type)</h5>
                <hr />
                <p>@Model.Description</p>
            </div>
        </div>
    </a>
</li>

<div class="modal fade" id="myModalDelete">
    <div class="modal-dialog" id="myModalBodyDiv">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Delete bike</h4>
            </div>

            <div class="modal-body">
                Are you sure you want to delete @Model.Model?
            </div>

            <div class="modal-footer">
                <a href="#" value="Delete" class="btn btn-default" onclick="DeleteBike(@Model.Id)">Delete</a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $.ajaxSetup({ cache: false });
    });
    var ConfirmDeleteBike = function () {
        $('#myModalDelete').modal('show');
    }


    var DeleteBike = function (bikeId) {
        $('#myModalDelete').modal('show');
        $.ajax({
            type: "POST",
            url: "/Bike/ConfirmDelete/"+bikeId,
            data: { id:bikeId },
            success: function(result) {
                $("#loaderDiv").hide();
                $("#myModalDelete").modal("hide");
                $("#row_" + bikeId).remove();
            }
        });
    }
</script>