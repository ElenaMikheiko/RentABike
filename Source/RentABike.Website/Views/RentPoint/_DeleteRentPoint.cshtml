@model RentABike.Models.RentPoint

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Delete rent point</h4>
    </div>

    <div class="modal-body">
        @Html.HiddenFor(m=>m.Id)
        Are you sure you want to delete @Model.Name @Model.Address?
    </div>

    <div class="modal-footer">
        <a href="#" value="Delete" class="btn btn-default" onclick="DeleteBike(@Model.Id)">Delete</a>
    </div>
</div>


<script type="text/javascript">

    var DeleteBike = function (rentPointId) {
        $.ajax({
            type: "POST",
            url: "/RentPoint/ConfirmDelete/" + rentPointId,
            data: { rentPointId: rentPointId },
            success: function (result) {
                $("#createRentPointFormModal").modal("hide");
                $("#row_" + rentPointId).remove();
            }
        });
    }


</script>