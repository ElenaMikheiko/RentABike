@model RentABike.Models.Bike

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Are you sure you want to delete this?</h4>
        </div>

        <div class="modal-body">
           @{
                var image = Model.Image != null ? "data:image/jpeg; base64," + (Convert.ToBase64String(Model.Image)) : "/Content/Images/image.png";
           }
            <div class="">
                <div class="form-group">
                    <img class="img" src="@image" alt="" width="150" style="padding-top: 10px"/><br/>
                </div>
                <div class="form-group">
                    @Html.DisplayFor(model => model.Model, new {htmlAttributes = new {@class = "form-control"}})
                    (@Html.DisplayFor(model =>model.BikeType.Type))
                </div>
                <div class="form-group">
                    @Html.DisplayFor(model => model.Description, new {htmlAttributes = new {@class = "form-control"}})
                </div>

            </div>



        </div>

        <div class="modal-footer">
            <a href="#" value="Delete" class="btn btn-default" onclick="DeleteBike(@Model.Id)">Delete</a>
        </div>

    </div>
