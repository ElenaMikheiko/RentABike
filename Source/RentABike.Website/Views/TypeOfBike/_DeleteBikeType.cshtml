@model RentABike.Models.BikeType

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Delete type of bike</h4>
    </div>

    <div class="modal-body">
        @Html.HiddenFor(m => m.Id)
        Are you sure you want to delete @Model.Type?
    </div>

    <div class="modal-footer">
        <a href="#" value="Delete" class="btn btn-default" onclick="DeleteTypeOfBike(@Model.Id)">Delete</a>
    </div>
</div>


<script type="text/javascript">

    var DeleteTypeOfBike = function (bikeTypeId) {
        $.ajax({
            type: "POST",
            url: "/TypeOfBike/ConfirmDelete/" + bikeTypeId,
            data: { bikeTypeId: bikeTypeId },
            success: function (result) {
                $("#FormModal").modal("hide");
                $("#row_" + bikeTypeId).remove();
            }
        });
    }


</script>